<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <arg name="robot_type1" default="mir" />
  <arg name="robot_type2" default="mir" />

  <!-- BEGIN ROBOT 1-->
  <group ns="robot_0">
    <param name="tf_prefix" value="robot_0" />
    <node name="agent_pos_publish" pkg="multi_robot_action_move" type="robots_pos_publish.py" output="screen" args="robot_0" />
    <include file="$(find mybot_gazebo)/launch/$(arg robot_type1)/navigation_config_stage_goal_pub.launch">
	<arg name="robot" value="robot_0"/>
    </include>
  </group>


  <!-- BEGIN ROBOT 2-->
  <group ns="robot_1">
    <param name="tf_prefix" value="robot_1" />
    <node name="agent_pos_publish" pkg="multi_robot_action_move" type="robots_pos_publish.py" output="screen" args="robot_1" />
    <include file="$(find mybot_gazebo)/launch/$(arg robot_type1)/navigation_config_stage_goal_pub.launch">
	<arg name="robot" value="robot_1"/>
    </include>
  </group>

</launch>
