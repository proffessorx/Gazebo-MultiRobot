<?xml version="1.0" encoding="UTF-8"?>
<launch>		

  <arg name="robot"/>
  <!-- Map server -->
  <arg name="map_file" default="$(find mybot_gazebo)/maps/robotino3/simple.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <arg name="initial_pose_x" default="0.0"/> <!-- Use 17.0 for willow's map in simulation -->
  <arg name="initial_pose_y" default="0.0"/> <!-- Use 17.0 for willow's map in simulation -->
  <arg name="initial_pose_a" default="0.0"/>

  <!--- Run move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find turtlesim_nav)/config/costmap_common_params_stage.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find turtlesim_nav)/config/costmap_common_params_stage.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find turtlesim_nav)/config/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find turtlesim_nav)/config/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find turtlesim_nav)/config/base_local_planner_params.yaml" command="load" />
	<rosparam file="$(find turtlesim_nav)/config/move_base_params.yaml" command="load" />
  </node>
  
  <node pkg="fake_localization" type="fake_localization" name="fake_localization" output="screen">
	<param name="odom_frame_id" value="$(arg robot)/odom"/>
	<param name="base_frame_id" value="$(arg robot)/base_link"/> 
  </node> 

</launch>
